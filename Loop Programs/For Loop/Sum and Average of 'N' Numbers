#include<iostream.h>

#include<conio.h>

void main()

{

 clrscr();

 int no,s,av,i,a,ctr,S,AV,CTR;

 S=0;s=0;ctr=0;CTR=0;

 cout<<"\nEnter the total numbers you want to process: ";

 cin>>a;

 for(i=1;i<=a;++i)

 {

 cout<<"\nEnter a number: ";

 cin>>no;

 if(no%2==0)

 {

   s=s+no;

   ctr++;

 }

 else

 {

   S=S+no;

   CTR++;

 }

 }

 av=s/ctr;

 AV=S/CTR;

 cout<<"\nSum of even numbers: "<<s<<" and average is: "<<av;

 cout<<"\nSum of odd numbers: "<<S<<" and average is: "<<AV;

 getch();

}
